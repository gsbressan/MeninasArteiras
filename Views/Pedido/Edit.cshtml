        <div class="editor-label">
            @Html.LabelFor(model => model.ValorTotal)
        </div>
        <div class="editor-field">
            @Html.DisplayFor(model => model.ValorTotal)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
