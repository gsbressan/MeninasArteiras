@model MeninasArteiras.Models.Produto

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Details</title>
</head>
<body>
    <fieldset>
        <legend>Produto</legend>
    
        <div class="display-label">
             @Html.DisplayNameFor(model => model.Nome)
        </div>
        <div class="display-field">
            @Html.DisplayFor(model => model.Nome)
        </div>
    
        <div class="display-label">
             @Html.DisplayNameFor(model => model.Descricao)
        </div>
        <div class="display-field">
            @Html.DisplayFor(model => model.Descricao)
        </div>
        <div class="display-label">
            @Html.DisplayNameFor(model => model.FotoDoProduto)
        </div>
        <div class="display-field">
            <img width="200" src="@Url.Action("GetImage", "Produto", new{id=Model.ProdutoID})"/>
        </div>
        <div class="display-label">
             @Html.DisplayNameFor(model => model.ValorUnitario)
        </div>
        <div class="display-field">
            @Html.DisplayFor(model => model.ValorUnitario)
        </div>
    </fieldset>
    <p>
        @Html.ActionLink("Edit", "Edit", new { id=Model.ProdutoID }) |
        @Html.ActionLink("Back to List", "Index")
    </p>
</body>
</html>
